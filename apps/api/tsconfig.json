{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/shared": ["../../packages/shared/src"]
    },
    "rootDirs": ["./src", "./tests"],
    "typeRoots": ["./src/types", "../../node_modules/@types"],
    "isolatedModules": true,
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
